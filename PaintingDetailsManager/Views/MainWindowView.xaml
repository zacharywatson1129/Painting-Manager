        <StackPanel Margin="5" Grid.Row="0" Orientation="Vertical" Grid.RowSpan="4">
            <Button x:Name="LoadDefaultView" Margin="0 10 0 0" Height="60" Width="80" 
                    Background="Transparent" BorderBrush="Transparent">
                <StackPanel Orientation="Vertical">
                    <Image Width="40" Source="..\Icons\iconmonstr-home-3-240.png" />
                    <TextBlock Text="Home" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="CreateNewImage" Margin="0" Height="60" Width="80" 
                    Background="Transparent" BorderBrush="Transparent">
                <Image Margin="10" Source="..\Icons\iconmonstr-plus-2-240.png" />
            </Button>
            <Button x:Name="LoadNotesPage" Margin="0" Height="75" Width="75">
                <Image Margin="10" Source="..\Icons\iconmonstr-note-20-240.png" />
            </Button>
            <Button x:Name="LoadListView" Margin="0" Height="75" Width="75">
                <Image Margin="10" Source="..\Icons\iconmonstr-menu-4-240.png" />
            </Button>
            <Button x:Name="LoadGalleryView" Margin="0" Height="75" Width="75">
                <Image Margin="10" Source="..\Icons\iconmonstr-picture-17-240.png" />
            </Button>

        </StackPanel>
        <ContentControl Grid.Row="0" Grid.Column="1" Grid.RowSpan="4"
                        Grid.ColumnSpan="2" x:Name="ActiveItem" />
