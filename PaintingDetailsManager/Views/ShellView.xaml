<Window
    x:Class="PaintingDetailsManager.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Painting Details Manager"
    Width="800"
    Height="600"
    Background="#FF3E3E3E"
    FontFamily="HP Simplified"
    FontSize="16"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="4"
            Margin="5,0,5,0"
            Orientation="Vertical">
            <Button
                x:Name="LoadDefaultView"
                Width="75"
                Height="75"
                Margin="0,0,0,0">
                <Image Width="50" Source="..\Icons\iconmonstr-home-3-240.png" />
            </Button>
            <Button
                x:Name="CreateNewImage"
                Width="75"
                Height="75"
                Margin="0">
                <Image Width="50" Source="..\Icons\iconmonstr-plus-2-240.png" />
            </Button>
            <Button
                x:Name="LoadNotesPage"
                Width="75"
                Height="75"
                Margin="0">
                <Image Width="50" Source="..\Icons\iconmonstr-note-20-240.png" />
            </Button>
            <Button
                x:Name="LoadListView"
                Width="75"
                Height="75"
                Margin="0">
                <Image Width="50" Source="..\Icons\iconmonstr-menu-4-240.png" />
            </Button>
            <Button
                x:Name="LoadGalleryView"
                Width="75"
                Height="75"
                Margin="0">
                <Image Width="50" Source="..\Icons\iconmonstr-picture-17-240.png" />
            </Button>
            <Button
                x:Name="LoadAPIConfigureView"
                Width="75"
                Height="75"
                Margin="0">
                <Image Width="50" Source="..\Icons\iconmonstr-globe-thin-240.png" />
            </Button>


        </StackPanel>
        <ContentControl
            x:Name="ActiveItem"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="2" />
